{
    "env": {
        "browser": true,
        "es6": true,
        "webextensions": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "indent": ["error", 4],
        "prefer-arrow-callback": ["error", { "allowNamedFunctions": true }],
        "semi": [2, "always"],
        "space-before-function-paren": ["error", "never"]
    }
}