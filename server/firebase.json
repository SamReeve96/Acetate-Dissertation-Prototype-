{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/loadAllSheets",
        "function": "loadAllSheets"
      },
      {
        "source": "/loadSheet",
        "function": "loadSheet"
      },
      {
        "source": "/addSheet",
        "function": "addSheet"
      },
      {
        "source": "/updateSheet",
        "function": "updateSheet"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  }
}
